@model ControleDeRação.Models.Pet

@{
    ViewData["Title"] = "Código Gerado";
}

<main class="content">
    <div class="content-box text-center">
        <h2>Cadastro Concluído!</h2>

        <div class="alert alert-success mb-4" role="alert">
            <h4 class="alert-heading">Seu Código PET:</h4>
            <p class="h1 font-weight-bold">@Model.CodigoAcesso</p>
            <hr>
            <p>Guarde este código para acessar o controle de ração.</p>
        </div>

        <a asp-controller="Racao"
           asp-action="Controle"
           asp-route-petId="@Model.Id"
           class="btn btn-primary btn-lg">
            Ir para Controle de Ração
        </a>

        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            Voltar ao Início
        </a>
    </div>
</main>