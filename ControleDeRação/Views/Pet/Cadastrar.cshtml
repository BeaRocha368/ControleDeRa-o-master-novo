@{
}
@model ControleDeRação.Models.Pet

<main class="content">
    <div class="content-box">
        <h2 class="box-title">CADASTRAR PET</h2>
        
        <form asp-controller="Pet" asp-action="Cadastrar" method="post" >

            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Nome">Nome do PET</label>
                <input asp-for="Nome" class="form-control" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade">Idade</label>
                <input asp-for="Idade" type="number" step="1" class="form-control" required />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso">Peso</label>
                <input asp-for="Peso" type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="Peso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MarcaRacao">Marca da Ração</label>
                <input asp-for="MarcaRacao" class="form-control" required />
                <span asp-validation-for="MarcaRacao" class="text-danger"></span>
            </div>

            <br />

            <div class="btn-group">
                <button type="submit" class="btn btn-primary btn-submit">SALVAR</button>

                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>

            <div class="form-group" style="margin-top: 30px;">
                <label>Código PET</label>
                <input type="text"
                       id="codigo_pet"
                       name="codigo_pet"
                       class="form-control"
                       disabled
                       placeholder="Gerado automaticamente após salvar" />
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </form>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}