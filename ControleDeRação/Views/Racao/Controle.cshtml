@{
    ViewData["Title"] = "Controle de Ração";
}

<main class="content">
    <div class="content-box">
        <h2 class="box-title">CONTROLE DE RAÇÃO</h2>

        <form method="post" asp-controller="Racao" asp-action="AtualizaEstoque">
            @Html.AntiForgeryToken()

            <input type="hidden" name="estoqueAtual" value="@Model.EstoqueAtualKg" />
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="form-group">
                <label for="estoque_atual">Estoque Atual em KG</label>
                <input type="text" id="estoque_atual" value="@Model.EstoqueAtualKg.ToString("F2")" disabled />
                <span class="float-right" style="margin-top: -30px; margin-right: 5px;">KG</span>
                <small class="form-text text-muted">Estoque atualizado em: @Model.DataAtualizacao.ToString("dd/MM/yyyy HH:mm")</small>
            </div>

            <hr />

            <h3>Registro de Compra</h3>

            <div class="form-group">
                <label for="quantidade_comprada">Quantidade Comprada (KG)</label>
                <input type="number" step="0.1" id="quantidade_comprada" name="quantidadeComprada" placeholder="Ex: 5.0" value="0.0" />
            </div>

            <div class="form-group">
                <label for="data_compra">Data da Compra</label>
                <input type="date" id="data_compra" name="dataCompra" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
            </div>

            <hr />

            <h3>Configuração de Consumo</h3>

            <div class="form-group">
                <label for="consumo_diario">Consumo Diário (KG/dia)</label>
                <input type="number" step="0.01" id="consumo_diario" name="consumoDiario" placeholder="Ex: 0.5 (para 500 gramas)" value="@Model.ConsumoDiarioKg.ToString("F2")" />
            </div>

            @if (Model.AlertaEstoqueBaixo)
            {
                <div class="alert alert-danger text-center mt-3" role="alert">
                    ALERTA! ESTOQUE BAIXO (Abaixo de 0.5 KG / 500g)
                </div>
            }

            <div class="btn-group mt-4">
                <button type="submit" class="btn btn-success btn-action-salvar">SALVAR E ATUALIZAR</button>
            </div>

            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>
        </form>
    </div>
</main>


